<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>company</param-name>
        <param-value>SemanticBits</param-value>
    </context-param>
    <context-param>
        <param-name>location</param-name>
        <param-value>Hyderabad</param-value>
    </context-param>

    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.arun.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>AddistionServlet</servlet-name>
        <servlet-class>com.arun.AdditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddistionServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LifeCycle</servlet-name>
        <servlet-class>com.arun.LifeCycle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LifeCycle</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ParamsDemo</servlet-name>
        <servlet-class>com.arun.ParamsDemo</servlet-class>
        <init-param>
            <param-name>employee</param-name>
            <param-value>Arun</param-value>
        </init-param>
        <init-param>
            <param-name>phone</param-name>
            <param-value>9490181424</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ParamsDemo</servlet-name>
        <url-pattern>/params</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Servlet1</servlet-name>
        <servlet-class>com.arun.Servlet1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet1</servlet-name>
        <url-pattern>/servlet1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Servlet2</servlet-name>
        <servlet-class>com.arun.Servlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet2</servlet-name>
        <url-pattern>/servlet2</url-pattern>
    </servlet-mapping>
</web-app>